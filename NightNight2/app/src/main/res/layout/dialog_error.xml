<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/errorContainer"
        android:layout_width="0dp"
        android:layout_height="200sp"
        android:background="@drawable/rectangle_red_border"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/error"
        app:layout_constraintBottom_toBottomOf="@+id/errorContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/errorContainer"
        app:layout_constraintTop_toTopOf="@+id/errorContainer"
        app:layout_constraintVertical_bias="0.41000003"
        app:srcCompat="@drawable/error" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/error"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/errorImage"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/errorImage"
        app:layout_constraintTop_toBottomOf="@+id/errorImage" />

</androidx.constraintlayout.widget.ConstraintLayout>